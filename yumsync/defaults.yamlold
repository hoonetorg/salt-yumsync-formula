# -*- coding: utf-8 -*-
# vim: ft=yaml
yumsync:
  pkgs: 
    - yumsync
  service:
    name: yumsync
    state: running
    enable: True
  conffile: '/etc/yumsync/yumsync.ini'
  
  # default settings
  conf:
    'without_section_pre':
      opt-without-section-at-beginning-of-file: 'enabled'
    '[sect1]':
      opt1: value1
    '[sect2]':
      opt2: value2
    'without_section_post':
      opt-without-section-at-end-of-file-will-be-in-last-section: 'enabled'
